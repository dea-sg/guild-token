{
	"name": "template-solidity-project",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "del 'artifacts'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomicfoundation/hardhat-toolbox": "2.0.0",
		"@nomiclabs/hardhat-ethers": "2.2.1",
		"@nomiclabs/hardhat-etherscan": "3.1.2",
		"@nomiclabs/hardhat-waffle": "2.0.3",
		"@openzeppelin/hardhat-upgrades": "1.21.0",
		"@typechain/ethers-v5": "10.1.0",
		"@typechain/hardhat": "6.1.3",
		"@types/chai": "4.3.3",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "10.0.0",
		"@types/node": "18.11.7",
		"@typescript-eslint/eslint-plugin": "5.41.0",
		"@typescript-eslint/parser": "5.41.0",
		"chai": "4.3.6",
		"del-cli": "5.0.0",
		"dotenv": "16.0.3",
		"eslint": "8.26.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-config-xo": "0.42.0",
		"eslint-config-xo-typescript": "0.53.0",
		"ethers": "5.7.2",
		"hardhat": "2.12.1",
		"husky": "8.0.1",
		"mocha": "10.1.0",
		"prettier": "2.7.1",
		"prettier-plugin-solidity": "1.0.0-dev.24",
		"solhint": "3.3.7",
		"ts-node": "10.9.1",
		"typechain": "8.1.0",
		"typescript": "4.8.4"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.2",
		"@openzeppelin/contracts": "4.7.3",
		"@openzeppelin/contracts-upgradeable": "4.7.3",
		"hardhat-gas-reporter": "^1.0.8",
		"solidity-coverage": "^0.8.0"
	}
}
