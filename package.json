{
	"name": "template-solidity-project",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "del 'artifacts'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "2.0.6",
		"@nomicfoundation/hardhat-ethers": "3.0.5",
		"@nomicfoundation/hardhat-network-helpers": "1.0.10",
		"@nomicfoundation/hardhat-verify": "2.0.6",
		"@nomiclabs/hardhat-etherscan": "3.1.8",
		"@openzeppelin/hardhat-upgrades": "3.0.4",
		"@typechain/ethers-v6": "0.5.1",
		"@typechain/hardhat": "9.1.0",
		"@types/chai": "4.3.16",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "10.0.6",
		"@types/node": "20.12.11",
		"chai": "4.4.1",
		"del-cli": "5.1.0",
		"dotenv": "16.4.5",
		"eslint": "9.3.0",
		"eslint-config-prettier": "9.1.0",
		"ethers": "6.12.1",
		"hardhat": "2.22.4",
		"husky": "8.0.3",
		"mocha": "10.4.0",
		"prettier": "2.8.8",
		"prettier-plugin-solidity": "1.3.1",
		"solhint": "4.5.4",
		"ts-node": "10.9.2",
		"typechain": "8.3.2",
		"typescript": "5.4.5"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-ignition": "^0.15.4",
		"@nomicfoundation/hardhat-ignition-ethers": "^0.15.4",
		"@nomicfoundation/hardhat-toolbox": "5.0.0",
		"@openzeppelin/contracts": "5.0.2",
		"@openzeppelin/contracts-upgradeable": "4.9.6",
		"@typescript-eslint/eslint-plugin": "7.9.0",
		"@typescript-eslint/parser": "7.9.0",
		"hardhat-gas-reporter": "^2.0.0",
		"solidity-coverage": "^0.8.0"
	}
}
